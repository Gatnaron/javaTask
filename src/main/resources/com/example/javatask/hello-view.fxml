<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javatask.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="openMenuItem" mnemonicParsing="false" text="Open" />
            </items>
              <items>
                  <MenuItem fx:id="saveMenuItem" mnemonicParsing="false" text="Save" />
              </items>
          </Menu>
        </menus>
      </MenuBar>
        <BorderPane prefHeight="461.0" prefWidth="759.0">
            <bottom>
                <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="582.0">
                     <children>
                        <Label text="Название фигуры" />
                        <TextField fx:id="nameShapeTextField" />
                            <Label fx:id="titleShapeLabel">
                                <font>
                                    <Font name="Calibri" size="18.0" />
                                </font>
                        </Label>
                     </children>
                        </VBox>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="182.0">
                     <children>
                        <Button fx:id="backShapeButton" alignment="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="182.0" text="Назад">
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
                    </children></HBox>
            </bottom>
            <center>
                <Canvas fx:id="canvas" height="362.0" width="764.0" BorderPane.alignment="CENTER" />
            </center>
        </BorderPane>
    </children>
</VBox>
